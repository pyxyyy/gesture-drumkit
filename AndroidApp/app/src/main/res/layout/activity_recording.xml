<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="50dp"
              android:layout_height="match_parent">

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Start Recording"/>

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:enabled="false"
        android:text="Stop Recording"/>


    <Button
        android:id="@+id/audio_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Test - Audio Start"/>


    <Button
        android:id="@+id/audio_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Test - Audio Stop"/>

    <Button
        android:id="@+id/audio_insert_beat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Test - Add Beat"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tempo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo: "
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/tempo_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:inputType="numberSigned"
            android:textSize="20sp"
            android:minWidth="20dp"
            />

        <Button
            android:id="@+id/set_tempo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Tempo"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="(Applies after current recording)"
        android:textStyle="italic"
        android:textSize="12sp"/>
</LinearLayout>
