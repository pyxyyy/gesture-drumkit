<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/instrument_name_textview"
        android:text="An Instrument"
        android:background="@color/colorKick"
        android:layout_gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:textColor="@color/colorLighterGray"
        android:textStyle="bold"
        android:layout_width="80dp"
        android:textSize="12sp"
        android:lines="1"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/instrument_beats_rv"
        android:layout_marginLeft="16dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        tools:listitem="@layout/view_beat"
        tools:itemCount="12"/>
</LinearLayout>
